root = true

[*]
charset = utf-8
trim_trailing_whitespace = true
insert_final_newline = true
end_of_line = lf
max_line_length = 120

[*.{js,ts}]
indent_style = space
indent_size = 4

[Makefile]
indent_style = tab

[*.{yaml,yml}]
indent_style = space
indent_size = 2

[*.java]
indent_style = space
indent_size = 4

[*.json]
indent_style = space
indent_size = 4
